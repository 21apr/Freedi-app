{
	"compilerOptions": {
		"module": "CommonJS",
		"noImplicitReturns": true,
		"noUnusedLocals": true,
		"outDir": "lib",
		"sourceMap": true,
		"strict": true,
		"target": "es2017"
	},
	"compileOnSave": true,
	"baseUrl": ".",
	"paths": {
		"@/*": ["../src/types"]
	},
	"include": ["src", "../src/types"],
	"exclude": ["node_modules", "lib"]
}
